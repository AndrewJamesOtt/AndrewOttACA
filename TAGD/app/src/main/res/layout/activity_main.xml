<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.aca.andrewott.tagd.MainActivity" android:background="#3a3a3a">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    <Button
        android:text="Recents"
        android:id="@+id/btnRecents"
        android:layout_height="60dp"
        android:background="@color/lightGreen"
        android:layout_width="180dp"
        android:layout_alignBottom="@+id/btnSearchGT" android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btnSearchGT" android:textColor="@color/white"/>
    <Button
        android:text="Search Gamertag"
        android:id="@+id/btnSearchGT"
        android:layout_height="60dp"
        android:background="@color/lightGreen" android:layout_width="180dp"
        android:layout_alignParentBottom="true" android:layout_alignParentStart="true"
        android:textColor="@color/white"/>
    <EditText
        android:layout_width="match_parent"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginBottom="30dp" android:id="@+id/editTextGT"
        android:textSize="24sp"
        android:textStyle="normal|italic" android:background="#ffffff"
        android:layout_height="48dp"
        android:textColor="#0f0f0f"
        android:padding="10dp"
        android:layout_above="@+id/btnRecents" android:layout_alignParentStart="true"/>
    <TextView
        android:text="Gamertag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:id="@+id/textView2" android:layout_above="@+id/btnSearchGT"
        android:layout_alignParentStart="true" android:textColor="@android:color/darker_gray"/>
</RelativeLayout>
</RelativeLayout>
