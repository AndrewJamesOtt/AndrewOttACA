<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.aca.andrewott.tagd.MainActivity" android:background="#3a3a3a">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp" app:srcCompat="@mipmap/tagdlogo"
        android:id="@+id/imgTAGDLogo"
        android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
        android:layout_marginTop="81dp"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true" android:layout_alignParentStart="true"
        android:layout_marginBottom="83dp">


    <Button
        android:text="Recents"
        android:id="@+id/btnRecents"
        android:layout_height="60dp"
        android:background="@android:drawable/btn_default"
        android:layout_width="180dp"
        android:layout_alignBottom="@+id/btnSearchGT" android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btnSearchGT" android:textColor="@color/white"
        android:backgroundTint="@color/lightGreen"/>
    <Button
        android:text="Search Gamertag"
        android:id="@+id/btnSearchGT"
        android:layout_height="60dp"
        android:background="@android:drawable/btn_default" android:layout_width="180dp"
        android:layout_alignParentBottom="true" android:layout_alignParentStart="true"
        android:textColor="@color/white" android:backgroundTint="@color/lightGreen"/>
    <EditText
        android:layout_width="match_parent"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginBottom="30dp" android:id="@+id/editTextGT"
        android:textSize="24sp"
        android:textStyle="normal|italic"
        android:layout_height="48dp"
        android:textColor="#0f0f0f"
        android:padding="10dp"
        android:layout_above="@+id/btnRecents" android:layout_alignParentStart="true"
        android:background="@color/white"/>
    <TextView
        android:text="Gamertag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:id="@+id/txtViewGTHome" android:layout_above="@+id/btnSearchGT"
        android:layout_alignParentStart="true" android:textColor="@android:color/darker_gray"/>
    </RelativeLayout>
    <ImageButton
        android:layout_width="175dp"
        android:layout_height="55dp" app:srcCompat="@android:drawable/ic_menu_mylocation"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="13dp" android:id="@+id/imageButton"
        android:backgroundTint="@color/lightGreen" android:layout_centerHorizontal="true"/>
</RelativeLayout>
