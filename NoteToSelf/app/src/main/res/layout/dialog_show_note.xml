<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:padding="10dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewImportant" android:src="@drawable/ic_warning_black_24dp"
        android:layout_marginTop="20dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewTodo"
        android:src="@drawable/ic_check_box_outline_blank_black_24dp"
        android:layout_marginLeft="27dp" android:layout_marginTop="20dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewIdea" android:src="@drawable/ic_wb_incandescent_black_24dp"
        android:layout_marginLeft="54dp" android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/txtTitle" android:layout_below="@+id/imageViewImportant"
        android:layout_centerHorizontal="true" android:layout_marginTop="42dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/txtDescription"
        android:layout_below="@+id/txtTitle" android:layout_alignStart="@+id/imageViewImportant"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ok_button"
        android:id="@+id/btnOK" android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" android:layout_marginBottom="46dp"/>
</RelativeLayout>