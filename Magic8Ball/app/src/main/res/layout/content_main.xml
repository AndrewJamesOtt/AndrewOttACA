<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity" android:background="@color/abc_input_method_navigation_guard">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/perkLayout"
        android:layout_alignTop="@+id/buffLayout" android:layout_alignParentStart="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/txtDiceRollOne"
            android:textSize="24sp"
            android:layout_below="@+id/txtFirstRoll" android:layout_centerHorizontal="true"
            android:textColor="#ea0606"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Your Fate"
            android:id="@+id/txtFirstRoll"
            android:textSize="26sp" android:layout_below="@+id/buttonDiceRoll"
            android:layout_centerHorizontal="true" android:textColor="#ffffff"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Will I win"
            android:id="@+id/buttonDiceRoll"
            android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
            android:background="#5B5B5B" android:textColor="#ffffff"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:id="@+id/buffLayout"
                    android:layout_below="@+id/hevLayout" android:layout_alignEnd="@+id/hevLayout"
                    android:layout_marginTop="60dp">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceLarge"
                  android:id="@+id/txtDiceRollTwo" android:textSize="24sp"
                  android:layout_below="@+id/txtSecondRoll" android:layout_centerHorizontal="true"
                  android:textColor="#EA0606"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceLarge"
                  android:text="Your Buff!" android:id="@+id/txtSecondRoll" android:textSize="26sp"
                  android:layout_below="@+id/buttonDiceRoll2"
                  android:layout_centerHorizontal="true" android:textColor="#ffffff"/>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Roll &apos;em!" android:id="@+id/buttonDiceRoll2"
                android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
                android:background="#5B5B5B" android:textColor="#ffffff"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/priRelativeLayout">
        <TextView
            android:id="@+id/descriptionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/primary_weapon"
            android:gravity="center"
            android:textSize="@dimen/description_text_size" android:textColor="#ffffff"/>
        <TextView
            android:id="@+id/txtPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="7dp"
            android:textSize="@dimen/fortune_text_size"
            android:textStyle="bold"
            android:textColor="#EA0606"
            android:layout_below="@id/descriptionText"/>
        <Button
            android:id="@+id/btnShowPrimary"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Primary"
            android:background="#5B5B5B"
            android:textColor="#ffffff"
            android:textSize="30sp" android:layout_below="@+id/txtPrimary"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_below="@+id/priRelativeLayout"
                    android:layout_alignParentStart="true" android:layout_marginTop="24sp"
                    android:id="@+id/secRelativeLayout">
        <TextView android:id="@+id/descriptionText2" android:layout_width="match_parent"
                  android:layout_height="wrap_content" android:text="@string/secondary_weapon"
                  android:gravity="center" android:textSize="@dimen/description_text_size"
                  android:textColor="#ffffff"/>
        <TextView android:id="@+id/txtSecondary" android:layout_width="match_parent"
                  android:layout_height="wrap_content" android:gravity="center"
                  android:layout_marginTop="7dp" android:textSize="@dimen/fortune_text_size"
                  android:textStyle="bold" android:textColor="#EA0606"
                  android:layout_below="@+id/descriptionText2"/>
        <Button android:id="@+id/btnShowSecondary" android:layout_width="wrap_content"
                android:layout_height="50dp" android:background="#5B5B5B"
                android:text="secondary" android:textColor="#ffffff" android:textSize="30sp"
                android:layout_below="@+id/txtSecondary" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:id="@+id/hevLayout" android:layout_centerVertical="true"
                    android:layout_alignParentStart="true" android:layout_marginTop="20dp">
        <TextView android:id="@+id/descriptionText3" android:layout_width="match_parent"
                  android:layout_height="wrap_content" android:text="@string/heavy_weapon"
                  android:gravity="center" android:textSize="@dimen/description_text_size"
                  android:textColor="#ffffff"/>
        <TextView android:id="@+id/txtHeavy" android:layout_width="match_parent"
                  android:layout_height="wrap_content" android:gravity="center"
                  android:layout_marginTop="7dp" android:textSize="@dimen/fortune_text_size"
                  android:textStyle="bold" android:textColor="#EA0606"
                  android:layout_below="@+id/descriptionText3"/>
        <Button android:id="@+id/btnShowHeavy" android:layout_width="wrap_content"
                android:layout_height="50dp" android:text="heavy" android:background="#5B5B5B"
                android:textColor="#ffffff" android:textSize="30sp"
                android:layout_below="@+id/txtHeavy" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reset your fate"
        android:id="@+id/button" android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" android:background="#5b5b5b"
        android:textColor="#ffffff"/>

</RelativeLayout>